<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/background"
    android:background="@color/color_genral_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_genral_background">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayoutVert"
            android:padding="@dimen/default_padding_10inches">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBlock_editText_height_10inches"
                android:id="@+id/titleBlock">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewAppTitle"
                    android:layout_gravity="center"
                    android:text="APP RS 2016 - Gestion des robots"
                    android:textSize="@dimen/title_textSize_10inches"
                    android:textColor="@color/color_title_font"
                    android:textStyle="bold|italic" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceBlock_height_10inches"
                android:id="@+id/space1">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ipBlock_height_10inches"
                android:background="@color/color_block_background"
                android:id="@+id/ipBlock">

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:layout_margin="@dimen/default_margin_10inches">

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/ipCMByte1"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:maxLength="3"
                        android:numeric="integer"
                        android:imeOptions="actionNext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight_10inches"
                        android:text="."
                        android:id="@+id/textView"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize_10inches"
                        android:textColor="@color/color_ipDot_font"
                        android:layout_marginTop="@dimen/ip_dot_topMargin_10inches" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/ipCMByte2"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:maxLength="3"
                        android:imeOptions="actionNext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight_10inches"
                        android:text="."
                        android:id="@+id/textView8"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize_10inches"
                        android:textColor="@color/color_ipDot_font"
                        android:layout_marginTop="@dimen/ip_dot_topMargin_10inches"
                        />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/ipCMByte3"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="4"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:maxLength="3"
                        android:imeOptions="actionNext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight_10inches"
                        android:text="."
                        android:id="@+id/textView9"
                        android:layout_row="2"
                        android:layout_column="5"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize_10inches"
                        android:textColor="@color/color_ipDot_font"
                        android:layout_marginTop="@dimen/ip_dot_topMargin_10inches" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/ipCMByte4"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="6"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                        android:layout_marginRight="@dimen/right_margin_between_elmt_10inches"
                        android:maxLength="3"
                        android:imeOptions="actionDone"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connexion"
                        android:id="@+id/buttonLogInCM"
                        android:layout_row="2"
                        android:layout_column="7"
                        android:layout_margin="@dimen/button_default_margin_10inches"
                        android:textSize="@dimen/button_textSize_10inches"
                        android:textColor="@color/color_button_font" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DÃ©connexion"
                        android:id="@+id/buttonLogOutCM"
                        android:layout_row="2"
                        android:layout_column="8"
                        android:layout_margin="@dimen/button_default_margin_10inches"
                        android:textSize="@dimen/button_textSize_10inches"
                        android:textColor="@color/color_button_font" />

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse IP du Gestionnaire de communication"
                    android:id="@+id/textViewIPCM"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="@dimen/subtitle_textSize_10inches"
                    android:textColor="@color/color_subtitle_font"
                    android:layout_gravity="left|top" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceBlock_height_10inches"
                android:id="@+id/space2"></FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listBlock_height_10inches"
                android:id="@+id/listBlock"
                android:divider="#ff000000">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:columnCount="2"
                    android:rowCount="6">

                    <TextView
                        android:layout_width="@dimen/listView_width_10inches"
                        android:layout_height="wrap_content"
                        android:text="Liste des robots"
                        android:id="@+id/textView2"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textStyle="bold"
                        android:textSize="@dimen/subtitle_textSize_10inches"
                        android:textColor="@color/color_subtitle_font"
                        android:layout_margin="@dimen/default_margin_10inches"
                        android:textIsSelectable="false" />

                    <TextView
                        android:layout_width="@dimen/listView_width_10inches"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:text="Liste des fonctionnalitÃ©s"
                        android:textSize="@dimen/subtitle_textSize_10inches"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/default_margin_10inches"
                        android:layout_gravity="center"
                        android:textColor="@color/color_subtitle_font" />

                    <ListView
                        android:layout_width="@dimen/listView_width_10inches"
                        android:layout_height="@dimen/listView_height_10inches"
                        android:id="@+id/listViewRobot"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:background="@color/color_list_background"
                        android:choiceMode="singleChoice"
                        android:layout_gravity="center"
                        android:clickable="true" />

                    <ListView
                        android:layout_width="@dimen/listView_width_10inches"
                        android:layout_height="@dimen/listView_height_10inches"
                        android:id="@+id/listViewFeatures"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:background="@color/color_list_background"
                        android:choiceMode="singleChoice"
                        android:layout_gravity="center" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mettre Ã  jour la liste"
                        android:id="@+id/buttonUpdateRobotList"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_gravity="top|left|center"
                        android:textSize="@dimen/button_textSize_10inches"
                        android:textColor="@color/color_button_font" />

                </GridLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceBlock_height_10inches"
                android:id="@+id/space3">

            </FrameLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/orderBlock_height_10inches"
                android:id="@+id/orderBlock"
                android:rowCount="9"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse IP Robot"
                    android:id="@+id/textView7"
                    android:textSize="@dimen/subtitle_textSize_10inches"
                    android:layout_marginLeft="@dimen/default_margin_10inches"
                    android:textColor="@color/color_subtitle_font"
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:layout_row="0" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/sendBlock_height_10inches"
                    android:layout_column="1"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:background="@color/color_block_background"
                    android:id="@+id/ipRobotBlock"
                    android:layout_row="1">

                    <EditText
                        android:layout_width="@dimen/listView_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/editTextIPRobot"

                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textSize="@dimen/editText_textSize_10inches"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/default_margin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:layout_weight="1"
                        android:imeOptions="actionNext" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connexion"
                        android:id="@+id/buttonLogInRobot"
                        android:layout_weight="1"
                        android:textColor="@color/color_button_font" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DÃ©connexion"
                        android:id="@+id/buttonLogOutRobot"
                        android:layout_weight="1"
                        android:textColor="@color/color_button_font" />

                </LinearLayout>

                <RadioGroup android:layout_column="1"
                    android:id="@+id/orderRadioGroup"
                    android:background="@color/color_list_background"
                    android:layout_row="2"
                    android:layout_width="fill_parent">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Move : Commande le dÃ©placement du robot selon les axes X et Y, en fonction d&apos;un angle de rotation."
                        android:id="@+id/radioButtonMove"
                        android:layout_column="1"
                        android:layout_margin="@dimen/default_margin_10inches"
                        android:checked="false"
                        android:textColor="@color/color_default_font"
                        android:buttonTint="@color/color_body_font"
                        android:buttonTintMode="src_over" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Walk : Lance le mode &quot;promenade&quot; ; lorsque le robot rencontre un obstacle il tourne."
                        android:id="@+id/radioButtonWalk"
                        android:layout_column="1"
                        android:layout_margin="@dimen/default_margin_10inches"
                        android:checked="false"
                        android:textColor="@color/color_default_font"
                        android:buttonTint="@color/color_body_font" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reccord : demande au robot d&apos;afficher son flux vidÃ©o sur le PC qui lui est associÃ©."
                        android:id="@+id/radioButtonReccord"
                        android:layout_column="1"
                        android:layout_margin="@dimen/default_margin_10inches"
                        android:checked="false"
                        android:textColor="@color/color_default_font"
                        android:buttonTint="@color/color_body_font" />

                </RadioGroup>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tableOrder_height_10inches"
                    android:layout_column="1"
                    android:background="@color/color_block_background"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:layout_row="3"
                    android:id="@+id/moveParam">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="X en cm"
                            android:id="@+id/textView4"
                            android:layout_column="0"
                            android:textSize="@dimen/body_textSize_10inches"
                            android:textColor="@color/color_body_font"
                            android:layout_marginLeft="@dimen/default_margin_10inches" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Y en cm"
                            android:id="@+id/textView5"
                            android:layout_column="1"
                            android:textSize="@dimen/body_textSize_10inches"
                            android:textColor="@color/color_body_font"
                            android:layout_marginLeft="@dimen/default_margin_10inches" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Angle en Â°"
                            android:id="@+id/textView6"
                            android:layout_column="2"
                            android:textSize="@dimen/body_textSize_10inches"
                            android:textColor="@color/color_body_font"
                            android:layout_marginLeft="@dimen/default_margin_10inches" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/editTextMoveParam">

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width_10inches"
                            android:layout_height="@dimen/editText_parameter_height_10inches"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:inputType="numberSigned|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextXVal"
                            android:layout_column="0"
                            android:textSize="@dimen/editText_textSize_10inches"
                            android:background="#ffffffff"
                            android:maxLength="3"
                            android:imeOptions="actionNext"
                            android:text="0"
                            android:layout_marginLeft="@dimen/default_margin_10inches"
                            android:layout_marginRight="@dimen/default_margin_10inches" />

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width_10inches"
                            android:layout_height="@dimen/editText_parameter_height_10inches"
                            android:inputType="numberSigned|numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextYVal"
                            android:layout_column="1"
                            android:textSize="@dimen/editText_textSize_10inches"
                            android:background="#ffffffff"
                            android:layout_marginLeft="@dimen/default_margin_10inches"
                            android:layout_marginRight="@dimen/default_margin_10inches"
                            android:maxLength="3"
                            android:imeOptions="actionNext"
                            android:text="0" />

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width_10inches"
                            android:layout_height="@dimen/editText_parameter_height_10inches"
                            android:inputType="numberSigned|numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextThetaVal"
                            android:layout_column="2"
                            android:textSize="@dimen/editText_textSize_10inches"
                            android:background="#ffffffff"
                            android:layout_marginLeft="@dimen/default_margin_10inches"
                            android:layout_marginRight="@dimen/default_margin_10inches"
                            android:maxLength="3"
                            android:imeOptions="actionDone"
                            android:text="0"
                            android:layout_gravity="center" />

                    </TableRow>
                </TableLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envoyer"
                    android:id="@+id/buttonSend"
                    android:layout_marginLeft="@dimen/button_default_margin_10inches"
                    android:layout_marginTop="@dimen/small_margin_10inches"
                    android:layout_marginRight="@dimen/default_margin_10inches"
                    android:textSize="@dimen/button_textSize_10inches"
                    android:layout_column="1"
                    android:textColor="@color/color_button_font"
                    android:layout_row="5"
                    android:layout_gravity="center" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DÃ©connecter robot du GC"
                    android:id="@+id/buttonLogOutRobotCM"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_column="1"
                    android:layout_row="7"
                    android:textColor="@color/color_button_font"
                    android:textSize="@dimen/button_textSize_10inches"
                    android:layout_gravity="center" />

            </GridLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceBlock_height_10inches"
                android:id="@+id/space4"></FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_debug_background"
                android:id="@+id/debugBlock">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IP CM"
                    android:id="@+id/debugIPCM"
                    android:textSize="20dp"
                    android:textColor="@color/color_debug_font" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IP Robot"
                    android:id="@+id/debugIPRobot"
                    android:textSize="20dp"
                    android:textColor="@color/color_debug_font" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/debugIPTablet"
                    android:textSize="20dp"
                    android:text="IP Tablette"
                    android:textColor="@color/color_debug_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Param Move"
                    android:id="@+id/debugMoveParam"
                    android:textSize="20dp"
                    android:textColor="@color/color_debug_font" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
