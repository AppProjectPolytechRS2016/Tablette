<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/background">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayoutVert">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_textSize_10inches"
            android:background="#ffff9ea6"
            android:id="@+id/titleBlock">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/textViewAppTitle"
                android:layout_gravity="center"
                android:text="APP RS 2016 - Gestion des robots"
                android:textSize="@dimen/title_textSize_10inches"
                android:textColor="#ffff1f34" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceBlock_height_10inches"
            android:background="#6a6d8699"
            android:id="@+id/space1">
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ipBlock_height_10inches"
            android:background="#ffadc7fd"
            android:id="@+id/ipBlock">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:layout_margin="@dimen/default_margin_10inches">

                <EditText
                    android:layout_width="@dimen/ip_editText_width_10inches"
                    android:layout_height="@dimen/ip_editText_height_10inches"
                    android:id="@+id/ipCMOctet1"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="@dimen/default_padding_10inches"
                    android:layout_marginLeft="@dimen/default_margin_10inches"
                    android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                    android:layout_marginRight="@dimen/default_margin_10inches"
                    android:maxLength="3"
                    android:numeric="integer"
                    android:imeOptions="actionNext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ip_dot_textHeight_10inches"
                    android:text="."
                    android:id="@+id/textView"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/ip_dot_textSize_10inches"
                    android:textColor="#ff000000"
                    android:layout_marginTop="@dimen/ip_dot_topMargin_10inches" />

                <EditText
                    android:layout_width="@dimen/ip_editText_width_10inches"
                    android:layout_height="@dimen/ip_editText_height_10inches"
                    android:id="@+id/ipCMOctet2"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="@dimen/default_padding_10inches"
                    android:layout_marginLeft="@dimen/default_margin_10inches"
                    android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                    android:layout_marginRight="@dimen/default_margin_10inches"
                    android:maxLength="3"
                    android:imeOptions="actionNext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ip_dot_textHeight_10inches"
                    android:text="."
                    android:id="@+id/textView8"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/ip_dot_textSize_10inches"
                    android:textColor="#ff000000"
                    android:layout_marginTop="@dimen/ip_dot_topMargin_10inches"
                    />

                <EditText
                    android:layout_width="@dimen/ip_editText_width_10inches"
                    android:layout_height="@dimen/ip_editText_height_10inches"
                    android:id="@+id/ipCMOctet3"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="@dimen/default_padding_10inches"
                    android:layout_marginLeft="@dimen/default_margin_10inches"
                    android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                    android:layout_marginRight="@dimen/default_margin_10inches"
                    android:maxLength="3"
                    android:imeOptions="actionNext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ip_dot_textHeight_10inches"
                    android:text="."
                    android:id="@+id/textView9"
                    android:layout_row="2"
                    android:layout_column="5"
                    android:textStyle="bold"
                    android:textSize="@dimen/ip_dot_textSize_10inches"
                    android:textColor="#ff000000"
                    android:layout_marginTop="@dimen/ip_dot_topMargin_10inches" />

                <EditText
                    android:layout_width="@dimen/ip_editText_width_10inches"
                    android:layout_height="@dimen/ip_editText_height_10inches"
                    android:id="@+id/ipCMOctet4"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="6"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="@dimen/default_padding_10inches"
                    android:layout_marginLeft="@dimen/default_margin_10inches"
                    android:layout_marginTop="@dimen/ip_editText_topMargin_10inches"
                    android:layout_marginRight="@dimen/right_margin_between_elmt_10inches"
                    android:maxLength="3"
                    android:imeOptions="actionDone"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connexion"
                    android:id="@+id/buttonConnexionCM"
                    android:layout_row="2"
                    android:layout_column="7"
                    android:layout_margin="@dimen/button_default_margin_10inches"
                    android:textSize="@dimen/button_textSize_10inches" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Déconnexion"
                    android:id="@+id/buttonDeconnexionCM"
                    android:layout_row="2"
                    android:layout_column="8"
                    android:layout_margin="@dimen/button_default_margin_10inches"
                    android:textSize="@dimen/button_textSize_10inches" />
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse IP du Gestionnaire de communication"
                android:id="@+id/textViewIPCM"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="@dimen/subtitle_textSize_10inches"
                android:textColor="#ff000000"
                android:layout_gravity="left|top" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceBlock_height_10inches"
            android:background="#6a6d8699"
            android:id="@+id/space2"></FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/listBlock_height_10inches"
            android:background="#ffaaffaa"
            android:id="@+id/listBlock"
            android:divider="#ff000000">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:columnCount="2"
                android:rowCount="5">

                <TextView
                    android:layout_width="@dimen/listView_width_10inches"
                    android:layout_height="wrap_content"
                    android:text="Liste des robots"
                    android:id="@+id/textView2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textSize="@dimen/subtitle_textSize_10inches"
                    android:textColor="#ff000000"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:textIsSelectable="false" />

                <TextView
                    android:layout_width="@dimen/listView_width_10inches"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Liste des fonctionnalités"
                    android:textSize="@dimen/subtitle_textSize_10inches"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:layout_gravity="center"
                    android:textColor="#ff000000" />

                <ListView
                    android:layout_width="@dimen/listView_width_10inches"
                    android:layout_height="@dimen/listView_height_10inches"
                    android:id="@+id/listViewRobot"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:background="#ffbcf5ff"
                    android:choiceMode="singleChoice"
                    android:layout_gravity="center" />

                <ListView
                    android:layout_width="@dimen/listView_width_10inches"
                    android:layout_height="@dimen/listView_height_10inches"
                    android:id="@+id/listViewFeatures"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:background="#ffffc8b5"
                    android:choiceMode="singleChoice"
                    android:layout_gravity="center" />

            </GridLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceBlock_height_10inches"
            android:background="#6a6d8699"
            android:id="@+id/space3">
        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/orderBlock_height_10inches"
            android:background="#fffffda5"
            android:id="@+id/orderBlock">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/reccordBlock">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reccord"
                    android:id="@+id/buttonReccord"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:textSize="@dimen/button_textSize_10inches" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Demande au robot d&apos;afficher son flux vidéo sur le PC qui lui est associé."
                    android:id="@+id/descriptionReccord"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:textSize="@dimen/description_text_size_10inches"
                    android:textColor="#ff000000"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/walkBlock">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walk"
                    android:id="@+id/buttonWalk"
                    android:layout_column="0"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:textSize="@dimen/button_textSize_10inches" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Lance le mode &quot;promenade&quot; ; lorsque le robot rencontre un obstacle il tourne soit  droite, soit à gauche."
                    android:id="@+id/descriptionWalk"
                    android:layout_column="1"
                    android:textSize="@dimen/description_text_size_10inches"
                    android:textColor="#ff000000"
                    android:layout_margin="@dimen/default_margin_10inches" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/moveBlock">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Move"
                    android:id="@+id/buttonMove"
                    android:layout_column="0"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:textSize="@dimen/button_textSize_10inches" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commande le déplacement du robot selon les axes X et Y, et en fonction d&apos;un angle de rotation"
                    android:id="@+id/descriptionMove"
                    android:layout_column="1"
                    android:textSize="@dimen/description_text_size_10inches"
                    android:textColor="#ff000000"
                    android:layout_margin="@dimen/default_margin_10inches" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/moveParam">

                <TableLayout
                    android:layout_width="@dimen/tableOrder_width_10inches"
                    android:layout_height="@dimen/tableOrder_height_10inches"
                    android:layout_column="1"
                    android:background="#ffb8ccff">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X en cm"
                            android:id="@+id/textView4"
                            android:layout_column="0"
                            android:textSize="@dimen/body_textSize_10inches"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="@dimen/textView_default_leftMargin_10inches" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y en cm"
                            android:id="@+id/textView5"
                            android:layout_column="1"
                            android:textSize="@dimen/body_textSize_10inches"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="@dimen/textView_default_leftMargin_10inches" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Angle en °"
                            android:id="@+id/textView6"
                            android:layout_column="2"
                            android:textSize="@dimen/body_textSize_10inches"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="@dimen/textView_default_leftMargin_10inches" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width_10inches"
                            android:layout_height="@dimen/editText_parameter_height_10inches"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextXVal"
                            android:layout_column="0"
                            android:textSize="@dimen/editText_textSize_10inches"
                            android:background="#ffffffff"
                            android:layout_marginLeft="@dimen/default_margin_10inches"
                            android:layout_marginTop="@dimen/small_margin_10inches"
                            android:layout_marginRight="@dimen/small_margin_10inches"
                            android:layout_marginBottom="@dimen/small_margin_10inches" />

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width_10inches"
                            android:layout_height="@dimen/editText_parameter_height_10inches"
                            android:inputType="numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextYVal"
                            android:layout_column="1"
                            android:textSize="@dimen/editText_textSize_10inches"
                            android:background="#ffffffff"
                            android:layout_marginLeft="@dimen/small_margin_10inches"
                            android:layout_marginTop="@dimen/small_margin_10inches"
                            android:layout_marginRight="@dimen/small_margin_10inches"
                            android:layout_marginBottom="@dimen/small_margin_10inches" />

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width_10inches"
                            android:layout_height="@dimen/editText_parameter_height_10inches"
                            android:inputType="numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextThetaVal"
                            android:layout_column="2"
                            android:textSize="@dimen/editText_textSize_10inches"
                            android:background="#ffffffff"
                            android:layout_marginLeft="@dimen/small_margin_10inches"
                            android:layout_marginTop="@dimen/small_margin_10inches"
                            android:layout_marginRight="@dimen/small_margin_10inches"
                            android:layout_marginBottom="@dimen/small_margin_10inches" />

                    </TableRow>
                </TableLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/sendBlock">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/sendBlock_height_10inches"
                    android:layout_column="1"
                    android:layout_margin="@dimen/default_margin_10inches"
                    android:background="#ffc9c9c9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresse IP Robot"
                        android:id="@+id/textView7"
                        android:textSize="@dimen/body_textSize_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:textColor="#ff000000"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/editTextIPRobot1"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textSize="@dimen/editText_textSize_10inches"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/default_margin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:maxLength="3"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight_10inches"
                        android:text="."
                        android:id="@+id/textView10"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize_10inches"
                        android:textColor="#ff000000"
                        android:layout_marginTop="@dimen/ip_dot_topMargin_10inches" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/editTextIPRobot2"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textSize="@dimen/editText_textSize_10inches"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/default_margin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:maxLength="3"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight_10inches"
                        android:text="."
                        android:id="@+id/textView11"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize_10inches"
                        android:textColor="#ff000000"
                        android:layout_marginTop="@dimen/ip_dot_topMargin_10inches" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/editTextIPRobot3"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textSize="@dimen/editText_textSize_10inches"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="5dp"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/default_margin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:maxLength="3"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight_10inches"
                        android:text="."
                        android:id="@+id/textView12"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize_10inches"
                        android:textColor="#ff000000"
                        android:layout_marginTop="@dimen/ip_dot_topMargin_10inches" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width_10inches"
                        android:layout_height="@dimen/ip_editText_height_10inches"
                        android:id="@+id/editTextIPRobot4"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="6"
                        android:textSize="@dimen/editText_textSize_10inches"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="@dimen/default_padding_10inches"
                        android:layout_marginLeft="@dimen/default_margin_10inches"
                        android:layout_marginTop="@dimen/default_margin_10inches"
                        android:layout_marginRight="@dimen/right_margin_between_elmt_10inches"
                        android:maxLength="3"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Envoyer"
                        android:id="@+id/buttonSend"
                        android:layout_marginLeft="@dimen/button_default_margin_10inches"
                        android:layout_marginTop="@dimen/small_margin_10inches"
                        android:layout_marginRight="@dimen/default_margin_10inches"
                        android:textSize="@dimen/button_textSize_10inches" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spaceBlock_height_10inches"
            android:background="#6a6d8699"
            android:id="@+id/space4"></FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffdba3ff"
            android:id="@+id/debugBlock">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IP CM"
                android:id="@+id/debugIPCM"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IP Robot"
                android:id="@+id/debugIPRobot"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/debugIPTablet"
                android:textSize="20dp"
                android:text="IP Tablette" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Envoyer"
                android:id="@+id/buttonSendTestPhone"
                android:layout_marginLeft="@dimen/button_default_margin_10inches"
                android:layout_marginTop="@dimen/small_margin_10inches"
                android:layout_marginRight="@dimen/default_margin_10inches"
                android:textSize="@dimen/button_textSize_10inches" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
