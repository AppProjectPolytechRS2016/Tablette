<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:id="@+id/linearLayoutVert">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffff9ea6"
            android:id="@+id/titleBlock">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/editText"
                android:layout_gravity="center"
                android:text="APP RS 2016 - Gestion des robots"
                android:textSize="30dp"
                android:textColor="#ffff1f34" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space1"></FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffadc7fd"
            android:id="@+id/ipBlock">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Adresse IP du gestionnaire de communication"
                    android:id="@+id/textView"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:id="@+id/editText2"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:layout_marginLeft="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connexion"
                    android:id="@+id/buttonConnexionCM"
                    android:layout_row="2"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DÃ©connexion"
                    android:id="@+id/buttonDeconnexionCM"
                    android:layout_row="2"
                    android:layout_column="2" />
            </GridLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space2"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="#ffaaffaa"
            android:id="@+id/listBlock">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView2"
                android:layout_weight="1"
                android:clickable="true" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_weight="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space3"></FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#fffffda5"
            android:orientation="horizontal"
            android:id="@+id/orderBlock"></TableLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space4"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffa5f7"
            android:id="@+id/debugBlock"></LinearLayout>

    </LinearLayout>
</RelativeLayout>
