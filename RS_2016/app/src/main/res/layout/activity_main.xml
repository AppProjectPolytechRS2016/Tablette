<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayoutVert">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffff9ea6"
            android:id="@+id/titleBlock">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/editText"
                android:layout_gravity="center"
                android:text="APP RS 2016 - Gestion des robots"
                android:textSize="30dp"
                android:textColor="#ffff1f34" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space1">
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffadc7fd"
            android:id="@+id/ipBlock">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top"
                android:layout_margin="5dp">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:id="@+id/ipCMOctet1"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="5dp"
                    android:maxLength="3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="."
                    android:id="@+id/textView"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:id="@+id/ipCMOctet2"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="5dp"
                    android:maxLength="3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="."
                    android:id="@+id/textView8"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:id="@+id/ipCMOctet3"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="5dp"
                    android:maxLength="3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="."
                    android:id="@+id/textView9"
                    android:layout_row="2"
                    android:layout_column="5"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:id="@+id/ipCMOctet4"
                    android:inputType="number"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_row="2"
                    android:layout_column="6"
                    android:textIsSelectable="false"
                    android:background="#fffae7ff"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp"
                    android:maxLength="3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connexion"
                    android:id="@+id/buttonConnexionCM"
                    android:layout_row="2"
                    android:layout_column="7"
                    android:layout_margin="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Déconnexion"
                    android:id="@+id/buttonDeconnexionCM"
                    android:layout_row="2"
                    android:layout_column="8"
                    android:layout_margin="10dp" />
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse IP du Gestionnaire de communication"
                android:id="@+id/textView"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="20dp"
                android:layout_gravity="left|top" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space2"></FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="#ffaaffaa"
            android:id="@+id/listBlock"
            android:divider="#ff000000">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:columnCount="2"
                android:rowCount="5">

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:text="Liste des robots"
                    android:id="@+id/textView2"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Liste des fonctionnalités"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_gravity="center" />

                <ListView
                    android:layout_width="380dp"
                    android:layout_height="420dp"
                    android:id="@+id/listViewRobot"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:background="#ffbcf5ff"
                    android:choiceMode="singleChoice"
                    android:layout_gravity="center" />

                <ListView
                    android:layout_width="380dp"
                    android:layout_height="420dp"
                    android:id="@+id/listViewFeatures"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:background="#ffffc8b5"
                    android:choiceMode="singleChoice"
                    android:layout_gravity="center" />

            </GridLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space3">
        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#fffffda5"
            android:id="@+id/orderBlock">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/reccordBlock">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reccord"
                    android:id="@+id/buttonReccord"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Demande au robot d&apos;afficher son flux vidéo sur le PC qui lui est associé."
                    android:id="@+id/descriptionReccord"
                    android:layout_margin="5dp"
                    android:textSize="14dp"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/walkBlock">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walk"
                    android:id="@+id/buttonWalk"
                    android:layout_column="0"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Lance le mode &quot;promenade&quot; ; lorsque le robot rencontre un obstacle il tourne soit  droite, soit à gauche."
                    android:id="@+id/descriptionWalk"
                    android:layout_column="1"
                    android:textSize="14dp"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/moveBlock">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Move"
                    android:id="@+id/buttonMove"
                    android:layout_column="0"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Commande le déplacement du robot selon les axes X et Y, et en fonction d&apos;un angle de rotation"
                    android:id="@+id/descriptionMove"
                    android:layout_column="1"
                    android:textSize="14dp"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/moveParam">

                <TableLayout
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:background="#ffb8ccff">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X en cm"
                            android:id="@+id/textView4"
                            android:layout_column="0"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y en cm"
                            android:id="@+id/textView5"
                            android:layout_column="1"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Angle en °"
                            android:id="@+id/textView6"
                            android:layout_column="2"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <EditText
                            android:layout_width="205dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:inputType="numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextXVal"
                            android:layout_column="0"
                            android:textSize="20dp"
                            android:background="#ffffffff"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp" />

                        <EditText
                            android:layout_width="205dp"
                            android:layout_height="35dp"
                            android:inputType="numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextYVal"
                            android:layout_column="1"
                            android:textSize="20dp"
                            android:background="#ffffffff"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp" />

                        <EditText
                            android:layout_width="205dp"
                            android:layout_height="35dp"
                            android:inputType="numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextThetaVal"
                            android:layout_column="2"
                            android:textSize="20dp"
                            android:background="#ffffffff"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp" />

                    </TableRow>
                </TableLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/sendBlock">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:background="#ffc9c9c9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresse IP Robot"
                        android:id="@+id/textView7"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextIPRobot1"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:maxLength="3"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:id="@+id/textView10"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextIPRobot2"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:maxLength="3"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:id="@+id/textView11"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextIPRobot3"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:maxLength="3"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:id="@+id/textView12"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextIPRobot4"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="6"
                        android:textIsSelectable="false"
                        android:background="#fffae7ff"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:maxLength="3"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Envoyer"
                        android:id="@+id/buttonSend"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#6a6d8699"
            android:id="@+id/space4"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffdba3ff"
            android:id="@+id/debugBlock">

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
