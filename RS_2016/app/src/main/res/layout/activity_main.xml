<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/background"
    android:background="@color/color_genral_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_genral_background"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayoutVert"
            android:padding="@dimen/default_padding">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleBlock_editText_height"
                android:id="@+id/titleBlock">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewAppTitle"
                    android:layout_gravity="center"
                    android:text="@string/app_Title"
                    android:textSize="@dimen/title_textSize"
                    android:textColor="@color/color_title_font"
                    android:textStyle="bold|italic" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceBlock_height"
                android:id="@+id/space1">
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ipBlock_height"
                android:background="@color/color_block_background"
                android:id="@+id/ipBlock"
                android:layout_margin="@dimen/default_margin">

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|top"
                    android:layout_margin="@dimen/default_margin">

                    <EditText
                        android:layout_width="@dimen/ip_editText_width"
                        android:layout_height="@dimen/ip_editText_height"
                        android:id="@+id/ipCMByte1"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textIsSelectable="false"
                        android:background="@color/color_background_editText"
                        android:padding="@dimen/default_padding"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/ip_editText_topMargin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:maxLength="3"
                        android:numeric="integer"
                        android:imeOptions="actionNext"
                        android:textColor="@color/color_default_font"
                        android:text="193" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight"
                        android:text="."
                        android:id="@+id/textView"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize"
                        android:textColor="@color/color_ipDot_font"
                        android:layout_marginTop="@dimen/ip_dot_topMargin" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width"
                        android:layout_height="@dimen/ip_editText_height"
                        android:id="@+id/ipCMByte2"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:textIsSelectable="false"
                        android:background="@color/color_background_editText"
                        android:padding="@dimen/default_padding"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/ip_editText_topMargin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:maxLength="3"
                        android:imeOptions="actionNext"
                        android:autoText="false"
                        android:textColor="@color/color_default_font"
                        android:text="48" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight"
                        android:text="."
                        android:id="@+id/textView8"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize"
                        android:textColor="@color/color_ipDot_font"
                        android:layout_marginTop="@dimen/ip_dot_topMargin"
                        />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width"
                        android:layout_height="@dimen/ip_editText_height"
                        android:id="@+id/ipCMByte3"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="4"
                        android:textIsSelectable="false"
                        android:background="@color/color_background_editText"
                        android:padding="@dimen/default_padding"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/ip_editText_topMargin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:maxLength="3"
                        android:imeOptions="actionNext"
                        android:textColor="@color/color_default_font"
                        android:text="125" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ip_dot_textHeight"
                        android:text="."
                        android:id="@+id/textView9"
                        android:layout_row="2"
                        android:layout_column="5"
                        android:textStyle="bold"
                        android:textSize="@dimen/ip_dot_textSize"
                        android:textColor="@color/color_ipDot_font"
                        android:layout_marginTop="@dimen/ip_dot_topMargin" />

                    <EditText
                        android:layout_width="@dimen/ip_editText_width"
                        android:layout_height="@dimen/ip_editText_height"
                        android:id="@+id/ipCMByte4"
                        android:inputType="number"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="6"
                        android:textIsSelectable="false"
                        android:background="@color/color_background_editText"
                        android:padding="@dimen/default_padding"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/ip_editText_topMargin"
                        android:layout_marginRight="@dimen/right_margin_between_elmt"
                        android:maxLength="3"
                        android:imeOptions="actionDone"
                        android:textColor="@color/color_default_font"
                        android:text="64" />

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/ipBlock_LogInCMButton"
                        android:id="@+id/buttonLogInCM"
                        android:layout_row="2"
                        android:layout_column="7"
                        android:layout_margin="@dimen/button_default_margin"
                        android:textSize="@dimen/button_textSize"
                        android:textColor="@color/color_button_font" />

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/ipBlock_LogOutCMButton"
                        android:id="@+id/buttonLogOutCM"
                        android:layout_row="2"
                        android:layout_column="8"
                        android:layout_margin="@dimen/button_default_margin"
                        android:textSize="@dimen/button_textSize"
                        android:textColor="@color/color_button_font" />

                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ipBlock_BlockName"
                    android:id="@+id/textViewIPCM"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="@dimen/subtitle_textSize"
                    android:textColor="@color/color_subtitle_font"
                    android:layout_gravity="left|top" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceBlock_height"
                android:id="@+id/space2"></FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listBlock_height"
                android:id="@+id/listBlock"
                android:divider="#ff000000">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:columnCount="2"
                    android:rowCount="6">

                    <TextView
                        android:layout_width="@dimen/listView_width"
                        android:layout_height="wrap_content"
                        android:text="@string/listBlock_robotList"
                        android:id="@+id/textView2"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textStyle="bold"
                        android:textSize="@dimen/subtitle_textSize"
                        android:textColor="@color/color_subtitle_font"
                        android:layout_margin="@dimen/default_margin"
                        android:textIsSelectable="false" />

                    <TextView
                        android:layout_width="@dimen/listView_width"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:text="@string/listBlock_featuresList"
                        android:textSize="@dimen/subtitle_textSize"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/default_margin"
                        android:layout_gravity="center"
                        android:textColor="@color/color_subtitle_font" />

                    <ListView
                        android:layout_width="@dimen/listView_width"
                        android:layout_height="@dimen/listView_height"
                        android:id="@+id/listViewRobot"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:choiceMode="singleChoice"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:background="@drawable/nao" />

                    <ListView
                        android:layout_width="@dimen/listView_width"
                        android:layout_height="@dimen/listView_height"
                        android:id="@+id/listViewFeatures"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:choiceMode="singleChoice"
                        android:layout_gravity="center"
                        android:background="@drawable/rob"
                        android:backgroundTint="@color/color_list_background" />

                    <Button
                        android:layout_width="@dimen/button_width_update"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/listBlock_Update"
                        android:id="@+id/buttonUpdateRobotList"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_gravity="top|left|center"
                        android:textSize="@dimen/button_textSize"
                        android:textColor="@color/color_button_font"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginTop="@dimen/default_margin" />

                </GridLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spaceBlock_height"
                android:id="@+id/space3">

            </FrameLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/orderBlock_height"
                android:id="@+id/orderBlock"
                android:rowCount="9"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderBlock_IPRobot"
                    android:id="@+id/textView7"
                    android:textSize="@dimen/subtitle_textSize"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:textColor="@color/color_subtitle_font"
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:layout_row="0" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/orderParam_height"
                    android:layout_column="1"
                    android:layout_margin="@dimen/default_margin"
                    android:background="@color/color_block_background"
                    android:id="@+id/ipRobotBlock"
                    android:layout_row="1">

                    <TextView
                        android:layout_width="@dimen/listView_width"
                        android:layout_height="@dimen/ip_editText_height"
                        android:id="@+id/textViewIPRobot"

                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textSize="@dimen/editText_textSize"
                        android:textIsSelectable="false"
                        android:background="@color/color_background_editText"
                        android:padding="@dimen/default_padding"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:layout_marginTop="@dimen/default_margin"
                        android:layout_marginRight="@dimen/default_margin"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:textColor="@color/color_default_font" />

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/orderBlock_LogInRobot"
                        android:id="@+id/buttonLogInRobot"
                        android:layout_weight="1"
                        android:textColor="@color/color_button_font"
                        android:textSize="@dimen/button_textSize" />

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/orderBlock_LogOutRobot"
                        android:id="@+id/buttonLogOutRobot"
                        android:layout_weight="1"
                        android:textColor="@color/color_button_font"
                        android:textSize="@dimen/button_textSize" />

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/orderParam_height"
                    android:layout_column="1"
                    android:background="@color/color_block_background"
                    android:layout_margin="@dimen/default_margin"
                    android:layout_row="2"
                    android:id="@+id/moveParam">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/orderBlock_XValue"
                            android:id="@+id/textView4"
                            android:layout_column="0"
                            android:textSize="@dimen/body_textSize"
                            android:textColor="@color/color_body_font"
                            android:layout_marginLeft="@dimen/default_margin" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/orderBlock_YValue"
                            android:id="@+id/textView5"
                            android:layout_column="1"
                            android:textSize="@dimen/body_textSize"
                            android:textColor="@color/color_body_font"
                            android:layout_marginLeft="@dimen/default_margin" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/orderBlock_ThetaValue"
                            android:id="@+id/textView6"
                            android:layout_column="2"
                            android:textSize="@dimen/body_textSize"
                            android:textColor="@color/color_body_font"
                            android:layout_marginLeft="@dimen/default_margin" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/editTextMoveParam">

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width"
                            android:layout_height="@dimen/editText_parameter_height"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:inputType="numberSigned|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editTextXVal"
                            android:layout_column="0"
                            android:textSize="@dimen/editText_textSize"
                            android:background="@color/color_background_editText"
                            android:maxLength="4"
                            android:imeOptions="actionNext"
                            android:text="0"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:layout_marginRight="@dimen/default_margin"
                            android:textColor="@color/color_default_font" />

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width"
                            android:layout_height="@dimen/editText_parameter_height"
                            android:inputType="numberSigned|numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextYVal"
                            android:layout_column="1"
                            android:textSize="@dimen/editText_textSize"
                            android:background="@color/color_background_editText"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:layout_marginRight="@dimen/default_margin"
                            android:maxLength="4"
                            android:imeOptions="actionNext"
                            android:text="0"
                            android:textColor="@color/color_default_font" />

                        <EditText
                            android:layout_width="@dimen/editText_parameter_width"
                            android:layout_height="@dimen/editText_parameter_height"
                            android:inputType="numberSigned|numberDecimal"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:id="@+id/editTextThetaVal"
                            android:layout_column="2"
                            android:textSize="@dimen/editText_textSize"
                            android:background="@color/color_background_editText"
                            android:layout_marginLeft="@dimen/default_margin"
                            android:layout_marginRight="@dimen/default_margin"
                            android:maxLength="4"
                            android:imeOptions="actionDone"
                            android:text="0"
                            android:layout_gravity="center"
                            android:textColor="@color/color_default_font" />

                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/orderParam_height"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:background="@color/color_block_background"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orderBlock_ChoosenOrder"
                        android:id="@+id/textView10"
                        android:textSize="@dimen/subtitle_textSize"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:textColor="@color/color_subtitle_font"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewChosenOrder"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textSize="@dimen/editText_textSize"
                        android:textIsSelectable="false"
                        android:background="@color/color_background_editText"
                        android:padding="@dimen/default_padding"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/big_margin"
                        android:layout_marginRight="@dimen/big_margin"
                        android:textColor="@color/color_default_font" />

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:text="@string/orderBlock_buttonSend"
                        android:id="@+id/buttonSend"
                        android:textSize="@dimen/button_textSize"
                        android:layout_column="1"
                        android:textColor="@color/color_button_font"
                        android:layout_row="7"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/big_margin"
                        android:layout_marginRight="@dimen/big_margin" />
                </LinearLayout>

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/gyroBlock">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewAngleDesc"
                    android:text="@string/gyroBlock_AngleDesc"
                    android:textSize="@dimen/editText_textSize"
                    android:textColor="@color/color_body_font" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAngle"
                android:text="@string/gyroBlock_AngleText"
                android:textSize="@dimen/editText_textSize"
                android:textColor="@color/color_body_font"
                    android:autoText="false"
                    android:background="@color/color_block_background"
                    android:layout_marginTop="@dimen/big_margin" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_block_background">

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:id="@+id/buttonInitAngle"
                        android:text="@string/gyroBlock_ButtonStart"
                        android:textSize="@dimen/button_textSize"
                        android:layout_marginLeft="@dimen/big_margin" />

                    <Button
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:id="@+id/buttonSetAngle"
                        android:text="@string/gyroBlock_ButtonStop"
                        android:textSize="@dimen/button_textSize"
                        android:layout_marginLeft="@dimen/big_margin" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:background="@drawable/piedpage"></FrameLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
